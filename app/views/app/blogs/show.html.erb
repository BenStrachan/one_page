<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Photo:</strong>
  <% if @blog.photo.exists? %>
    <img class="avatar-large" src="<%= @blog.photo.url(:medium) %>" />
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<%= link_to 'Edit', edit_app_blog_path(@blog) %> |
<%= link_to 'Back', app_blogs_path %>
