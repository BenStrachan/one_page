<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td>
          <% if blog.photo.exists? %>
            <img class="avatar-large" src="<%= blog.photo.url(:medium) %>" />
          <% end %>
        </td>
        <td><%= blog.title %></td>
        <td><%= truncate(blog.description, length: 100) %></td>
        <td><%= truncate(blog.content, length: 100) %></td>
        <td><%= link_to 'Show', app_blog_path(blog) %></td>
        <td><%= link_to 'Edit', edit_app_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', app_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_app_blog_path %>
